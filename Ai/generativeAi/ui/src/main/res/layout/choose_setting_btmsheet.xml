<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:background="#1E1D1D"
        android:paddingBottom="42dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Advanced Settings"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Negative Prompt"
            android:textSize="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/txt0"

            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="16dp"
            android:background="@drawable/model_drawable"
            android:textColor="@color/white"
            android:text="Don't include..."

            android:id="@+id/negative_prompt"
            android:paddingStart="20dp"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"


            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            app:layout_constraintEnd_toEndOf="@id/txt1"
            app:layout_constraintStart_toStartOf="@id/txt1"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        </androidx.appcompat.widget.AppCompatTextView>

        <TextView
            android:id="@+id/txt2"
            android:layout_marginTop="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Aspect Ratio"
            android:textSize="16dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/negative_prompt"
            app:layout_constraintStart_toStartOf="parent"  />

        <com.rocks.ui.ratio.CropRatioRecyclerView
            android:id="@+id/aspect_ratio_rv_stng"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.rocks.ui.ratio.CropRatioRecyclerView>


        <TextView
            android:id="@+id/txt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:layout_marginTop="18dp"
            android:text="CFG Scale"
            android:textSize="16dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/aspect_ratio_rv_stng"
            app:layout_constraintStart_toStartOf="parent" />


        <SeekBar
            android:id="@+id/cfg_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/txt3"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Steps"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/cfg_seekbar"
            app:layout_constraintStart_toStartOf="parent"  />


        <SeekBar
            android:id="@+id/steps_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/txt4"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Seed"
            android:textSize="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/steps_seekbar"
            app:layout_constraintStart_toStartOf="parent"  />

        <androidx.appcompat.widget.AppCompatTextView

            android:background="@drawable/model_drawable"
            android:textColor="@color/white"
            android:text="Picks a random seed when empty."
            android:id="@+id/seed_txt"
            android:paddingStart="20dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"


            android:paddingEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/txt5"
            app:layout_constraintEnd_toEndOf="@id/txt5"
            app:layout_constraintStart_toStartOf="@id/txt5"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        </androidx.appcompat.widget.AppCompatTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
