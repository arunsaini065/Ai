<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/spacing10"
        android:layout_marginEnd="@dimen/spacing10"
        android:background="@drawable/model_drawable"

        android:paddingEnd="@dimen/spacing10"
        android:paddingStart="@dimen/spacing10"
        android:layout_height="40dp">

        <com.rocks.ui.ratio.ratiolayout.RatioConstraintLayout
            android:id="@+id/m_ratio_layout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ratio_background_unselected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:padding="@dimen/spacing10"
            app:layout_constraintStart_toEndOf="@id/m_ratio_layout"
            app:layout_constraintBottom_toBottomOf="@id/m_ratio_layout"
            app:layout_constraintTop_toTopOf="@id/m_ratio_layout"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/spacing10"
          >
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
