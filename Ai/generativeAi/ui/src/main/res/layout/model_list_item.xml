<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/spacing10"
        android:layout_marginEnd="@dimen/spacing10"
        android:layout_marginBottom="@dimen/_14dp"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/model_img"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.10_percent"
            android:background="#272829"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <View
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/selected"
            android:background="@drawable/bg_boarder_selected"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.10_percent"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <TextView
            android:layout_marginTop="@dimen/spacing10"
            android:id="@+id/model_itm_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/model_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
