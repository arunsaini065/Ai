<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/m_back_press"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:scaleType="centerInside"
           app:srcCompat="@drawable/ic_back_press"
           android:layout_width="48dp"
           android:layout_height="48dp">
       </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/m_download"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/spacing10"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/download"
            android:layout_width="48dp"
            android:layout_height="48dp">
        </androidx.appcompat.widget.AppCompatImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/spacing10"
            app:layout_constraintBottom_toBottomOf="@+id/m_back_press"
            app:layout_constraintStart_toEndOf="@id/m_back_press"
            app:layout_constraintTop_toTopOf="@+id/m_back_press" />



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/result_loader"
            app:layout_constraintTop_toBottomOf="@id/m_back_press"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            style="@style/Style.App.5_percent"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="350dp">
        </com.google.android.material.imageview.ShapeableImageView>


        <ProgressBar
            android:id="@+id/result_progress_loader"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/result_loader"
            app:layout_constraintEnd_toEndOf="@+id/result_loader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/result_loader" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:id="@+id/btnGenerate"
            app:layout_constraintEnd_toEndOf="@id/result_loader"
            app:layout_constraintTop_toBottomOf="@id/result_loader"
            app:layout_constraintStart_toStartOf="@id/result_loader"
            android:layout_width="0dp"
            android:background="@drawable/generate_output_bg"
            android:layout_height="55dp">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:text="Generate More"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/edit_input"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnGenerate"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:drawablePadding="@dimen/spacing10"
            app:drawableStartCompat="@drawable/edit_ic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:text="Edit Input"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatTextView>

        <EditText
            android:id="@+id/positive_prompt"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_boarder"
            app:layout_constraintTop_toBottomOf="@id/edit_input"
            app:layout_constraintEnd_toEndOf="@id/btnGenerate"
            android:gravity="top"
            android:focusable="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/btnGenerate"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="100dp">
        </EditText>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
